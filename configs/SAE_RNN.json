{
    "dataset": {
        "train": "LENA/train.scp",
        "test": "LENA/test.scp",
        "args": {
            "sr": 16000,
            "chunk_size": 80,
            "stride": 4096,
            "spkr2idx" : {"CHN":0, "CXN":0, "FAN":1, "MAN":2},
            "target_channels": 3,
            "maxmin": 1
        }
    },
    "dataloader": {
        "batch_size": 120,
        "num_workers": 40,
        "shuffle": true,
        "pin_memory": true
    },
    "model": {
        "encoder": {
            "type": "SAE",
            "args": {"load_pretrained": 1, "pretrained_path": "pretrained/pretrained_encoder.pth"}
        },
        "backbone": {
            "type": "LSTM",
            "args": {"input_size": 288, "hidden_size": 200, "num_layers": 3, "bidirectional": 1}
        },
        "output": {
            "input_size": 200,
            "output_size": 3
        },
        "freeze_encoder": 0
    },
    "gpu_ids": [1, 2, 3],
    "loss": {
        "type": "FocalBCE",
        "args": {"gamma": 2.0, "alpha_pos": 0.25, "alpha_neg": 0.75}
    },
    "optimizer": {
        "lr": 0.001,
        "beta1": 0.9,
        "beta2": 0.999
    },
    "metric": {
        "threshold": 0.5,
        "median_filtering_length": 1
    }
}
