{
    "dataset": {
        "train": "LENA/train.scp",
        "test": "LENA/test.scp",
        "args": {
            "dataset_root": "/ws/ifp-10_3/hasegawa/junzhez2",
            "sr": 16000,
            "chunk_size": 80,
            "stride": 4096,
            "spkr2idx" : {"CHN":0, "CXN":0, "FAN":1, "MAN":2},
            "target_channels": 3,
            "minmax": 1
        }
    },
    "dataloader": {
        "batch_size": 120,
        "num_workers": 40,
        "shuffle": true,
        "pin_memory": true
    },
    "model": {
        "encoder": {
            "type": "SAE",
            "args": {},
            "load": 1,
            "pretrained_path": "pretrained/pretrained_encoder.pth",
            "freeze": 0
        },
        "backbone": {
            "type": "BLSTM",
            "args": {"input_size": 288},
            "load": 0,
            "pretrained_path": "",
            "freeze": 0
        },
        "classifier": {
            "type": "MLP",
            "args": {"widths": [512, 3]}
        }
    },
    "gpu_ids": [1, 2, 3],
    "loss": {
        "type": "FocalBCE",
        "args": {"gamma": 2.0, "alpha_pos": 0.25, "alpha_neg": 0.75}
    },
    "optimizer": {
        "lr": 0.001,
        "beta1": 0.9,
        "beta2": 0.999
    },
    "metric": {
        "type": "DER",
        "args":{
            "threshold": 0.5, 
            "median_filter": 5
        }
    }
}
